package main;

import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) throws FileNotFoundException {
		//D
		Scanner file;
		Scanner input;
		String name;
		int age;
		String residence;
		String cercaNome;
		int cercaAge;
		String cercaResidence;
		String risposta;
		String legenda;
		String cmd;
		
		//I
		input = new Scanner(System.in);
		file = new Scanner(new File("src/res/Anagrafiche.txt"));
		
		cercaNome = "";
		
		legenda = "1 - cerca file tramite il nome"
				+ "2 - cerca file tramite l'eta"
				+ "3 - cerca file tramite la residenza"
				+ "4 - Legenda"
				+ "0 - Esci";
		
		System.out.println("Benvenuto.");
		
		System.out.println(legenda);
		
		//C
		
		do
		{
			System.out.println("Commando: ");
			cmd = input.nextLine();
			
			switch(cmd)
			{
			case "1" :
				System.out.println("Digita il nome che vuoi cercare: ");
				cercaNome = input.nextLine();
				while(file.hasNextLine())
				{
					name = file.nextLine();
					age = Integer.parseInt(file.nextLine());
					residence = file.nextLine();
					
					if (name.equalsIgnoreCase(cercaNome))
						risposta += name + " di anni " + age + " residente a " + residence;
				}
				risposta = "Hai scelto il commando 1";
				break;
			case "2":
				risposta = "Hai scelto il commando 2";
				break;
			case "3":
				risposta = "Hai scelto il commando 3";
				break;
			case "4":
				risposta = legenda;
				break;
			case "0":
				risposta = "Arrivederci";
				break;
			default:
				risposta = "Commando inesistente";
			}//End switch
			
		}while(!cmd.equalsIgnoreCase("0"));
		
		
		
		
		
		//O
	}

}
